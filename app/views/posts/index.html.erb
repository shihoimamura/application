<h1>一覧表示</h1>

<table>
  <tr>
    <th>画像</th>

    <th>投稿者</th>

    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= image_tag post.image.url %></td>
    <td><%= post.user.name %></td>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "編集する", edit_post_path(post.id) %></td>
    <td><%= link_to '削除する', post_path(post.id), method: :delete %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '投稿する', new_post_path %>
