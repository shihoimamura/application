<%= form_with(model: @post, local: true ) do |form| %>
    <div class="post_image">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
    <div class="post_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <%= form.submit %>
  <% end %>

  <%= link_to '一覧画面に戻る', posts_path %>